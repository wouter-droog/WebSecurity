@page
@model WebAppIdentity.Pages.Account.LoginWith2fa

@{
    ViewData["Title"] = "Login";
    Layout = "Shared/_Layout";
}

<h3>Please enter the code sent to @ViewData["Email"]</h3>

<div class="container border">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
            <label asp-for="Input.Code"></label>
            <input type="text" asp-for="Input.Code" class="form-control"/>
        <span class="text-danger" asp-validation-for="Input.Code"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Login"/>
            <input type="hidden" asp-for="Input.RememberMe" />
        </div>
    </form>
</div>

        