@page
@model WebAppIdentity.Pages.Account.UserProfile

@{
    ViewData["Title"] = "User Profile";
    Layout = "Shared/_Layout";
}

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        <strong>Success:</strong> @TempData["StatusMessage"]
    </div>
}

<h3>User Profile</h3>
<div class="container border">
    <form method="post">
        <div class="form-group row p-2">
            <div class="col-2">
                <label asp-for="UserProfileViewModel!.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UserProfileViewModel!.Email" class="form-control" readonly/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserProfileViewModel!.Department"></label>
            <input type="text" asp-for="UserProfileViewModel!.Department" class="form-control"/>
            <span class="text-danger" asp-validation-for="UserProfileViewModel!.Department"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserProfileViewModel!.Position"></label>
            <input type="text" asp-for="UserProfileViewModel!.Position" class="form-control"/>
            <span class="text-danger" asp-validation-for="UserProfileViewModel!.Position"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update"/>
        </div>
    </form>
</div>