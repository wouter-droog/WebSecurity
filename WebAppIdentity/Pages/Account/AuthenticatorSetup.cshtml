@page
@model WebAppIdentity.Pages.Account.AuthenticatorSetup

@{
    ViewData["Title"] = "Two-Factor Authentication Setup";
    Layout = "Shared/_Layout";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        <p class="mb-0">@TempData["StatusMessage"]</p>
    </div>
}

<p>
    To set up two-factor authentication, follow these steps:
</p>

<ol>
    <li>
        Install the Microsoft Authenticator app on your mobile device. You can download it from the
        <a href="https://www.microsoft.com/en-us/account/authenticator">Microsoft Authenticator website</a>.
    </li>
    <li>
        Open the app and tap on the "+" icon to add a new account.
    </li>
    <li>
        Choose "Work or school account" and then scan the QR code below using the app.
    </li>
    <li>
        Once the account has been added to the app, enter the code generated by the app in the field below and click "Verify code".
    </li>
</ol>

<div>
    <p>Authenticator app key (would be nicer so see a QR code here)</p>
    <p>@Model.AuthenticatorKey</p>
</div>

<form method="post">
    <div>
        <label for="code">Authenticator code:</label>
        <input type="text" id="code" name="code" />
    </div>
    <div>
        <input type="submit" value="Verify code" />
    </div>
</form>

