@page
@model WebAppIdentity.Pages.Account.Login

@{
    ViewData["Title"] = "Login";
    Layout = "Shared/_Layout";
}

<h3>User Login</h3>
<div class="container border">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row p-2">
            <div class="col-2">
                <label asp-for="LoginViewModel!.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="LoginViewModel!.Email" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="LoginViewModel!.Email"></span>
        </div>
        <div class="form-group row p-2">
            <div class="col-2">
                <label asp-for="LoginViewModel!.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="LoginViewModel!.Password" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="LoginViewModel!.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 p-2">
                <input type="submit" class="btn btn-primary" value="Login"/>
            </div>
            <div class="col-2 p-2">
                <a class="btn btn-link" asp-page="Register">Sign up</a>
            </div>
        </div>
    </form>
</div>
