@if (User.Identity!.IsAuthenticated)
{
    <form method="post" class="form-check-inline" asp-page="/Account/Logout">
        Welcome @User.Identity.Name! (@User.Claims.First(_ => _.Type == "Position"))
        <button type="submit" class="m-lg-2 btn btn-link">Logout</button>
    </form>
}
else
{
    <a class="m-lg-2 btn btn-link" asp-page="/Account/Login">Login</a>
}